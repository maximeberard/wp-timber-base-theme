<!DOCTYPE html>
<html class="no-js" {{ site.language_attributes }} itemscope itemtype="http://schema.org/WebPage">
	<head>

    {% set shareImage = site.theme.link ~ '/img/share-image.jpg'  %}
    {% if post %}
        {% if post.thumbnail %}
            {% set shareImage = post.thumbnail.src('1200x630')  %}
        {% endif %}
        {# {% if post.meta('share_image') %}
            {% set shareImage = post.meta('share_image')  %}
        {% endif %} #}
    {% endif %}

    {% set title = function('get_the_title') %}
    {% set desc = site.description %}
    {# {% if not title %}
        {% set title = site.title %}
    {% endif %} #}
    {# {% set desc = 'Force desc' %} #}
    {% if post and fn('get_post_meta',post.id, '_yoast_wpseo_metadesc', true) %}
        {% set desc = fn('get_post_meta',post.id, '_yoast_wpseo_metadesc', true) %}
    {% endif %}

    {# function('wp_title') #}
    <title>{{ site.title }}{% if title %} - {{ title }}{% endif %}{% if desc %} - {{ desc }}{% endif %}</title>

	<meta charset="{{ site.charset }}"/>
	<meta name="description" content="{{ desc }}">
	<link rel="stylesheet" href="{{ site.theme.link }}/style.css" type="text/css" media="screen"/>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="author" href="{{ site.theme.link }}/humans.txt"/>

	<!-- Favicon -->
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
	<link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
	<link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
	<link rel="manifest" href="/site.webmanifest">
	<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#ffffff">
	<meta name="theme-color" content="#ffffff">

	<!-- Facebook  -->
	<meta property="og:title" content="TimberBaseTheme - SiteDescription"/>
	<meta property="og:site_name" content="TimberBaseTheme"/>
	<meta property="og:description" content="{{ desc }}"/>
	<meta property="og:url" content="http://www.url.com"/>
	<meta property="og:image" content="{{ shareImage }}"/>
	<meta
	property="og:type" content="website"/>
	<!-- Twitter  -->
	<meta name="twitter:card" content="summary"/>
	<meta name="twitter:title" content="TimberBaseTheme - SiteDescription"/>
	<meta name="twitter:description" content="{{ desc }}"/>
	{# <meta name="twitter:site" content="@twitteraccount"/> #}
	<meta name="twitter:url" content="http://www.url.com"/>
	<meta name="twitter:image" content="{{ shareImage }}"/>

	{# {{function('wp_head')}} #}

	<!--
	# Gulp injected styles
	# Using gulp-inject
	# @see gulp-tasks/inject.js
	-->
	<!-- inject:css -->
	<link rel="stylesheet" href="{{ site.theme.link }}/css/vendor-2f5a88b62c.css">
	<link rel="stylesheet" href="{{ site.theme.link }}/css/style-fb51f44a22.css">
	<!-- endinject -->

